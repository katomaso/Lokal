services:
  web:
    container_name: azuracast
    image: "ghcr.io/azuracast/azuracast:{{azuracast_version}}"
    labels:
      traefik.enable: "true"
      traefik.http.routers.azuracast.entrypoints: websecure
      traefik.http.routers.azuracast.rule: Host(`{{domain_azuracast}}`)
      traefik.http.routers.azuracast.tls: "true"
{% if server_is_live %}
      traefik.http.routers.azuracast.tls.certresolver: {{cert_resolver}}
{% endif %}
      traefik.http.services.azuracast.loadbalancer.server.port: 80
    networks:
      - traefik
    env_file: azuracast.env
    environment:
      LANG: {{lang_encoding}}
      APPLICATION_ENV: production
      AZURACAST_DC_REVISION: 14
      AZURACAST_VERSION: {{azuracast_version}
      MYSQL_HOST: {{mysql_host}}
      MYSQL_PORT: {{mysql_port}}
      MYSQL_USER: {{mysql_user_azuracast}}
      MYSQL_PASSWORD: {{mysql_password_azuracast}}
      MYSQL_DATABASE: {{mysql_database_azuracast}}
      MYSQL_RANDOM_ROOT_PASSWORD: no
      MYSQL_SLOW_QUERY_LOG: 0
      MYSQL_MAX_CONNECTIONS: 100
      AZURACAST_HTTP_PORT: 65534
      AZURACAST_HTTPS_PORT: 65535
      AZURACAST_SFTP_PORT: {{azuracast_sftp_port}}
      NGINX_TIMEOUT: {{azuracast_timeout|default('1800')}}
      PUID: '{{ ansible_facts["ansible_user_uid"] }}'
      PGID: '{{ ansible_facts["ansible_user_gid"] }}'
      COMPOSER_PLUGIN_MODE: false
      AUTO_ASSIGN_PORT_MIN: 8000
      AUTO_ASSIGN_PORT_MAX: 8499
    volumes:
      - www_uploads:'{{project_root}}/azuracast/uploads'
      - station_data:'{{project_root}}/azuracast/stations'
      - shoutcast2_install:'{{project_root}}/azuracast/servers/shoutcast2'
      - stereo_tool_install:'{{project_root}}/azuracast/servers/stereo_tool'
      - geolite_install:'{{project_root}}/azuracast/geoip'
      - sftpgo_data:'{{project_root}}/azuracast/sftpgo/persist'
      - backups:'{{project_root}}/azuracast/backups'
      - db_data:'{{project_root}}/mysql/data'
    restart: unless-stopped
    ulimits: &default-ulimits
      nofile:
        soft: 65536
        hard: 65536
    logging: &default-logging
      options:
        max-size: "1m"
        max-file: "5"
    # Want to customize the HTTP/S ports? Follow the instructions here:
    # https://docs.azuracast.com/en/administration/docker#using-non-standard-ports
    ports:
      - '{{azuracast_http_port}}:65534'
      - '{{azuracast_https_port}}:65535'
      - '{{azuracast_sftp_port}}'
